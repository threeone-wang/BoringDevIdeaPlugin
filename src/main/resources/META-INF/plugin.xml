<idea-plugin>
    <id>com.yitu.boring-dev-tool</id>
    <name>BoringDevTool</name>
    <vendor email="yitulin@outlook.com" url="">yitu</vendor>

    <description><![CDATA[
    A development tool, the purpose is to liberate some repetitive and boring work.
    <br>
    <em>Use code prompt shortcut keys to generate logs for methods.</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <intentionAction>
            <className>com.yitu.boring.action.GenerateMethodLogAction</className>
        </intentionAction>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>